doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registration Successful
    link(rel="icon", href="assets/images/notify.png")
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet")
    // Font Awesome CSS
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css", rel="stylesheet")
    // Custom Styles
    style.
      body {
        font-family: poppin;
        background-color: #f2f2f2;
        text-align: center;
      }   
      i.success-icon {
        color: green;
      }
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-body.text-center
              i.fas.fa-user.fa-5x.mb-3.success-icon
              h2.card-title.mb-4 Registration Successful
              .details.text-left
                p.mb-2
                  strong Name:
                    = user_details.name    
                p.mb-2
                  strong Email:
                    = user_details.email
                p.mb-2
                  strong Phone:
                    = user_details.phone_no
                p.mb-2
                  strong Account Type:
                    = user_details.acc_type
            a.btn.btn-success(href="/login") Proceed to Login

    // Bootstrap JS (optional, for some functionalities)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
