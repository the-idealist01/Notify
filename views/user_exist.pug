doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title User Already Exists
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet")
    // Font Awesome CSS
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css", rel="stylesheet")
    // Custom Styles
    style.
      body {
        font-family: poppin;
        background-color: #f2f2f2;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
  body
    .container
      .alert.alert-danger(role="alert")
        i.fas.fa-user.fa-5x.mb-3
        h4.alert-heading User Already Exists!
        p
          =message
        hr
        p.mb-0 Please try:
          br
          a.alert-link(href="/login") logging in with your existing credentials or
          br
          a.alert-link(href="/register") register with different details.
    // Bootstrap JS (optional, for some functionalities)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
